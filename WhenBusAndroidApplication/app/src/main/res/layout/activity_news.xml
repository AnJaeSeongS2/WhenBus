<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="270dp"
        android:layout_height="100dp"
        android:id="@+id/Image_Title"
        android:layout_gravity="center"
        android:src="@drawable/icon_newstitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TableLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/Table_star"
        android:orientation="vertical"
        android:layout_below="@+id/Image_Title"
        android:layout_centerHorizontal="true">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#03A9F4"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="날   짜"
            android:textColor="#000000"
            android:textSize="10pt" />
    </TableRow>
        <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FFFFFF"
        android:orientation="horizontal" >
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:text="15/12/17"
            android:id="@+id/Text_news_date"
            android:textColor="#000000"
            android:textSize="10pt" />
    </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:background="#03A9F4"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="내   용"
                android:textColor="#000000"
                android:textSize="10pt" />
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#FFFFFF"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="220dp"
                android:text="공지사항입니다"
                android:id="@+id/Text_news_content"
                android:textColor="#000000"
                android:textSize="10pt" />
        </TableRow>
    </TableLayout>>

    <ImageButton
        android:onClick="onImageBtnClicked_news_return"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/ImageButton_back"
        android:layout_marginBottom="10dp"
        android:src="@drawable/icon_back"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>