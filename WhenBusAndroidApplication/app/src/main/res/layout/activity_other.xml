<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="270dp"
        android:layout_height="100dp"
        android:id="@+id/Image_Title"
        android:layout_gravity="center"
        android:src="@drawable/icon_othertitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/linearLayout_main_1"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/Image_Title"
        android:layout_alignStart="@+id/Image_Title">
        <ImageButton
            android:onClick="onImageBtnClicked_other_star"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:id="@+id/ImageButton_search"
            android:src="@drawable/other_star_btnimage"
            android:background="#00000000"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:onClick="onImageBtnClicked_other_url"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:id="@+id/ImageButton_arrive"
            android:src="@drawable/other_url_btnimage"
            android:background="#00000000"
            android:scaleType="fitXY"
            android:layout_alignTop="@+id/Image_Bus_main"
            android:layout_alignRight="@+id/Txt_Title"
            android:layout_alignEnd="@+id/Txt_Title"
            android:layout_marginLeft="20dp" />
    </LinearLayout>

</RelativeLayout>